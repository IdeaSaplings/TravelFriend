        <activity android:name=".ListPharmacyActivity" 
            android:parentActivityName=".Travel">
        </activity>
         <activity android:name=".ListATMActivity" 
             android:parentActivityName=".Travel">
        </activity>
         <activity android:name=".ListRestaurantActivity" 
             android:parentActivityName=".Travel">
        </activity>
         <activity android:name=".ListRepairPalActivity" 
             android:parentActivityName=".Travel">
        </activity>
        <activity android:name=".ListFuelStationActivity" 
            android:parentActivityName=".Travel">
