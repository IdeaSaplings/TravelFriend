<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isaplings.travelfriend"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:maxSdkVersion="21" >
    </uses-permission>
    <uses-permission
        android:name="android.permission.INTERNET"
        android:maxSdkVersion="21" >
    </uses-permission>
    <uses-permission
        android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"
        android:maxSdkVersion="21" 
    />
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        android:maxSdkVersion="21" 
    />

    <application
        android:allowBackup="true"
        android:icon="@drawable/location"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".Travel"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <!-- <activity android:name=".ListPlacesActivity" > -->
        <!-- </activity> -->
        <activity
            android:name=".ListHospitalsActivity"
            android:parentActivityName=".Travel" >
        </activity>
        <activity
            android:name=".ListPharmacyActivity"
            android:parentActivityName=".Travel" >
        </activity>
        <activity
            android:name=".ListATMActivity"
            android:parentActivityName=".Travel" >
        </activity>
        <activity
            android:name=".ListRestaurantActivity"
            android:parentActivityName=".Travel" >
        </activity>
        <activity
            android:name=".ListRepairPalActivity"
            android:parentActivityName=".Travel" >
        </activity>
        <activity
            android:name=".ListFuelStationActivity"
            android:parentActivityName=".Travel" >
        </activity>
        <activity
            android:name=".ListRestRoomActivity"
            android:parentActivityName=".Travel" >
        </activity>
        <activity
            android:name=".ListTowServiceActivity"
            android:parentActivityName=".Travel" >
        </activity>
        <activity
            android:name=".ListSOSActivity"
            android:parentActivityName=".Travel" >
        </activity>
        <activity
            android:name=".ShareMyLocation"
            android:parentActivityName=".Travel" >
        </activity>    
        <activity
            android:name=".TravelSettings"
            android:parentActivityName=".Travel" >    
        </activity> 
    </application>

</manifest>